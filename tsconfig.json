{
    "compilerOptions": {
      "module": "ES2015",
      "declaration": true,
      "moduleResolution": "Node",
      "removeComments": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2017",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "rootDir": "./src"
    },
    "include": [ "./src/" ],
    "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
  }
  